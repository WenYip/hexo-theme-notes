mixin renderPostList(post)

    -var articleLink = config.root + post.path

    div.post.post-entry
        div.post-header
            div.post-meta
                span.post-time
                    | Posted on &nbsp;
                    = date(post.date, "YYYY-MM-DD")
            h2.post-title
                if post.pageType !== "post"
                    a.post-title-link(href=articleLink)
                        = post.title
                else
                    =post.title